<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.properties" />
	<settings>
		<!-- 카멜 케이스 VO 매핑 -->
		<setting name="mapUnderscoreToCamelCase" value="false" />
		<!-- 쿼리 결과 필드가 null인 경우, 누락이 되서 나오지 않게 설정 -->
		<setting name="callSettersOnNulls" value="true" />
		<!-- 쿼리에 보내는 파라미터가 null인 경우, 오류가 발생하는 것 방지 -->
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	<typeAliases>
	</typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="${spring.datasource.driver-class-name}" />
                <property name="url" value="${spring.datasource.url}" />
                <property name="username" value="${spring.datasource.username}" />
                <property name="password" value="${spring.datasource.password}" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper class="com.example.demo.sample.UserMapper" />
        <mapper class="com.example.demo.sample.product.mapper.ProductMapper" />
        <mapper class="com.example.demo.sample.cart.mapper.CartMapper" />
        <mapper class="com.example.demo.sample.order.mapper.OrderMapper" />
    </mappers>
</configuration>







